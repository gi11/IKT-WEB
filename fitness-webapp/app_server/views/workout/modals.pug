mixin CreateWorkoutBtn(parent_id)
    - const target_name = 'CreateWorkout_' + parent_id
    - const action_url = '/workouts/create'
    //Button
    button.btn.btn-primary(type='button', data-toggle='modal', data-target='#' + target_name)
        | Create New Workout
    // Modal
    .modal.fade(id=target_name, tabindex='-1', role='dialog')
        .modal-dialog.modal-dialog-centered(role='document')
            .modal-content
                form(action=action_url, method="post")
                    .modal-header
                        h5 Create new Workout
                        button.close(type='button', data-dismiss='modal', aria-label='Close')
                            span(aria-hidden='true') ×
