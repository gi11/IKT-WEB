
mixin DeleteWorkoutBtn(id)
    - const target_name = 'DeleteWorkout_' + id
    - const action_url = `/workouts/delete/${id}`
    //Button
    button.btn.btn-danger(type='button', data-toggle='modal', data-target='#' + target_name)
        | Delete
    // Modal
    .modal.fade(id=target_name, tabindex='-1', role='dialog')
        .modal-dialog.modal-dialog-centered(role='document')
            .modal-content
                .modal-header
                    h5 Delete Workout
                    button.close(type='button', data-dismiss='modal')
                        span(aria-hidden='true') ×
                .modal-body Are you sure you want to delete this Workout?
                .modal-footer
                    button.btn.btn-secondary(type='button', data-dismiss='modal') Cancel
                    form(action=action_url method="post")
                        button.btn.btn-danger(type='submit') Delete Workout

